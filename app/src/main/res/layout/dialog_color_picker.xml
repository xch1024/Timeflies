<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="选择颜色"
        android:textSize="18sp"
        android:textColor="@color/week_normal"
        android:layout_gravity="center"/>

    <com.example.timeflies.View.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layerType="software"
        android:tag="portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/preview_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/old_color_panel"
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/new_color_panel"
                android:layout_marginLeft="30dp"
                android:layout_width="70dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hex_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="#"
                android:textColor="@color/text_normal"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_hex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/edit_none_shape"
                android:textCursorDrawable="@drawable/cursor_dialog"
                android:gravity="center_vertical"
                android:hint="当前颜色"
                android:textColor="@color/week_normal"
                android:textSize="20sp"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:maxLength="7"
                android:maxLines="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/dialog_leave"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border"/>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/dialog_stay"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border"/>

    </LinearLayout>

</LinearLayout>