<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_shape">
    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20">
    </TextView>

    <EditText
        android:id="@+id/schedule_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/text_normal"
        android:inputType="number"
        android:singleLine="true"
        android:background="@drawable/selector_edit_rectangle"
        android:textCursorDrawable="@drawable/shape_cursor_dialog"></EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="范围 1 ~ "
            android:textColor="@color/text_normal"
            android:textSize="12sp"></TextView>

        <TextView
            android:id="@+id/schedule_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal"
            android:textSize="12sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/schedule_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="@string/dialog_cancel"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border" />

        <TextView
            android:id="@+id/schedule_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="@string/dialog_confirm"
            android:gravity="center"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border" />

    </LinearLayout>

</LinearLayout>