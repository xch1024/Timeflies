<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_shape"
    android:padding="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加时间段"
        android:textSize="20sp"
        android:textColor="@color/white">
    </TextView>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_full"
            android:checked="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="全周"></RadioButton>

        <RadioButton
            android:id="@+id/radio_single"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="单周"></RadioButton>

        <RadioButton
            android:id="@+id/radio_dual"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="双周"></RadioButton>
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="开始周次:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>


        <EditText
            android:id="@+id/week_start"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="请输入数字"
            android:textColorHint="@color/week_normal"
            android:inputType="number"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="结束周次:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>

        <EditText
            android:id="@+id/week_end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="请输入数字"
            android:textColorHint="@color/week_normal"
            android:inputType="number"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="周几上课:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>


        <EditText
            android:id="@+id/week_day"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="请输入数字1~7"
            android:textColorHint="@color/week_normal"
            android:inputType="number"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="开始节次:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>


        <EditText
            android:id="@+id/step_start"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="请输入数字"
            android:textColorHint="@color/week_normal"
            android:inputType="number"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:gravity="center_vertical"
            android:text="结束节次:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>

        <EditText
            android:id="@+id/step_end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="请输入数字"
            android:textColorHint="@color/week_normal"
            android:inputType="number"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="授课老师:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>

        <EditText
            android:id="@+id/teacher_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="授课老师(可不填)"
            android:textColorHint="@color/week_normal"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="上课教室:"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></TextView>

        <EditText
            android:id="@+id/class_room"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_none_shape"
            android:textCursorDrawable="@drawable/shape_cursor_course"
            android:hint="上课教室(可不填)"
            android:textColorHint="@color/week_normal"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_cancel"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border">

        </TextView>

        <TextView
            android:id="@+id/add_confirm"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/dialog_onclick"
            android:background="@drawable/ripple_border">

        </TextView>
    </LinearLayout>

</LinearLayout>





