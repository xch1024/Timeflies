<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/course_bg"
    android:orientation="vertical"
    tools:context=".activity.MenuSetting">

    <include
        layout="@layout/include_head"></include>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:text="课表"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/sp_15"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical"
                android:background="@drawable/shape_content_shape">


                <LinearLayout
                    android:id="@+id/table_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:background="@drawable/ripple_border_menu"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课表数据"
                        android:textColor="@color/content_text_color"
                        android:textSize="@dimen/sp_15"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:lineHeight="15sp"
                        android:text="设置学期周数、当前周、上课时间、一天节数、一周开始日等，课表名称也是在这里改哦"
                        android:textColor="@color/content_text_color"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_105"
                    android:background="@drawable/ripple_border_menu"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课表外观"
                        android:textColor="@color/content_text_color"
                        android:textSize="@dimen/sp_15"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:lineHeight="15sp"
                        android:text="背景、文字颜色和大小、小格子高度和不透明度、是否显示周末......这些都可以在这里自定义哦，未来会陆续开放更多的自定义设置"
                        android:textColor="@color/content_text_color"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="其他"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/sp_15"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical"
                android:background="@drawable/shape_content_shape">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_105"
                    android:background="@drawable/ripple_border_menu"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高级功能"
                        android:textColor="@color/content_text_color"
                        android:textSize="@dimen/sp_15"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:lineHeight="15sp"
                        android:text="解锁赞助一下开发者 ƪ(•̃͡ε•̃͡)∫ʃ\n高级功能会持续更新\n采用诚信授权模式"
                        android:textColor="@color/content_text_color"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_75"
                    android:background="@drawable/ripple_border_menu"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于"
                        android:textColor="@color/content_text_color"
                        android:textSize="@dimen/sp_15"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="了解背后的一些故事~"
                        android:textColor="@color/content_text_color"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>